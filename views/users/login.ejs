<% layout('/layouts/boilerplate') -%>

<div class="row">
    <div class="col-8 offset-2">
<h1>Login</h1>
<form  action="/login" method ="POST" novalidate class="needs-validation">
    <div class="mb-3">
    <label for="username" class="form-label"> Username</label>
    <input class="form-control" type="text" placeholder="Enter the Username" id="username"name="username" required>

    </div>
    
    
    <div class="mb-3">
        <label for="password" class="form-label">Password</label>
        <input  class="form-control" type="password" placeholder="Enter the Password" id="password" name="password" required>
        </div>
        <button class="btn btn-success">Login</button>
   
</form>
    </div>
</div>